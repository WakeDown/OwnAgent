@model IEnumerable<Models.ViewModels.SpendStatBillViewModel>

@{
    Layout = null;
}

@if (Model != null)
{
    <p>
        <div class="panel panel-default">
            @foreach (var item in Model)
            {
                <div class="panel-body text-lg">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 text-right text-middle">
                            @item.SpendBillName
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 text-right">
                            <div>
                                <span class="pull-right @(item.Sum > 0 ? "text-success" : "text-danger")">
                                    @(String.Format("{0:N0} р.", Math.Abs(item.Sum))) <i class="fa @(item.Sum > 0 ? "fa-plus-circle" : item.Sum == 0 ? "" : "fa-minus-circle")"></i>
                                </span>
                            </div>
                            <div class="clearfix"></div>
                            <div>
                                <small class="text-muted text-sm">
                                    + @(String.Format("{0:N0} р.", Math.Abs(item.IncSum)))
                                </small>
                                <small class="text-muted text-sm">
                                    - @(String.Format("{0:N0} р.", Math.Abs(item.ExpSum)))
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            }


@model IEnumerable<Models.ViewModels.SpendLastAddViewModel>

@{
    Layout = null;
}

@if (Model != null && Model.Any())
{
    <ul class="list-group">
            @foreach (var spend in Model)
            {

                <li class="last-add-card list-group-item @spend.SpendVectorBgColorClass" sid="@spend.Id">

                    <div class="@(spend.SpendVectorSysName == "EXP" ? "text-danger" : "text-success")">
                        <a href="#" class="last-add-remove text-muted"><i class="fa fa-remove"></i></a>
                        <div class="text-muted">
                            <small>@spend.Date.ToString("D")</small>
                            <br/>
                            <small>@spend.BillName</small>
                        </div>
                        <i class="@spend.SpendVectorIconName"></i>
                        <small>
                            @spend.SpendCategoryName
                        </small>
                        <div style="padding-left: 15px;">
                            @spend.Sum.ToString("N0")
                        </div>
                    </div>
                </li>
            }
    </ul>

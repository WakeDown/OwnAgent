                    @*<li><a href="@Url.Action("Stat", "Balance")"><i class="material-icons large" title="Статистика">insert_chart</i></a></li>*@
                    @*<li><a href="@Url.Action("Index", "SpendCategories")"><i class="fa fa-cogs fa-2x" title="Настройки"></i></a></li>*@

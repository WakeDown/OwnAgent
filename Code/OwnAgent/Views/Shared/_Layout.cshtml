                        <a href="#" title="Настройки" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-cogs fa-2x"></i> Настройки<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Index", "SpendBill")">Счета</a></li>
                            <li><a href="@Url.Action("Index", "SpendCategories")">Категории</a></li>
                        </ul>
                    </li>
                </ul>

                @Html.Partial("_LoginPartial")

            </div>
        </div>
    </div>
    <div class="container body-content">
        <noscript>
            <blockquote class="alert alert-danger">Необходимо включить JavaScript в браузере!</blockquote>
        </noscript>
        @RenderBody()
        <hr />
        <footer class="">
            <p>&copy; @DateTime.Now.Year - Бюджет</p>
        </footer>
    </div>
    @RenderSection("scripts", required: false)






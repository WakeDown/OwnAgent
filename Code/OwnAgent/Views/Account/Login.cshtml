@using OwnAgent.Models
@model LoginViewModel
@{
    ViewBag.Title = "Вход";
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @*<h4>Use a local account to log in.</h4>*@
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="col l4 m6 s12 input-field">
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email)
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "red-text" })
                    </div>
                </div>
                <div class="row">
                    <div class="col l4 m6 s12 input-field">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password)
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "red-text" })
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        @*@Html.CheckBoxFor(m => m.RememberMe, new {type="checkbox"})*@
                        <input id="RememberMe" name="RememberMe" type="checkbox" value="@Model.RememberMe.ToString()" checked="checked" />
                        @*<input type="checkbox" name="Model.RememberMe" class="filled-in" checked="checked"  />*@
                        @*<div class="switch">
                            <label>
                                Off
                                <input type="checkbox" name="RememberMe">
                                <span class="lever"></span>
                                On
                            </label>
                        </div>*@
                        @Html.LabelFor(m => m.RememberMe)
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <input type="submit" value="Войти" class="btn btn-default" />
                    </div>
                </div>
                <p>
                    @Html.ActionLink("Зарегистрироваться", "Register")
                </p>
                //Enable this once you have account confirmation enabled for password reset functionality
                <p>
                    @Html.ActionLink("Вспомнить пароль?", "ForgotPassword")
                </p>
            }
        </section>

    </div>
    <div class="col-md-4">
        <section id="socialLoginForm">
            @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
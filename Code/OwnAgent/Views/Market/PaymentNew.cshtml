@model Data.Models.MarketServicePayments
@{
    Layout = null;
}

<div class="modal-dialog" role="document">
    <div class="modal-content">

        <div class="modal-header">
            <a class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></a>
            <h4 class="modal-title">Новый платеж</h4>
        </div>
        <div class="modal-body">
            <div class="form-horizontal">
                <div class="form-group">
                    <label for="PaymentNewDate" class="col-sm-3 control-label">Дата</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.Date, new {id = "PaymentNewDate", @class = "form-control"})
                    </div>
                </div>
                <div class="form-group">
                    <label for="PaymentNewSum" class="col-sm-3 control-label">Сумма</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.Sum, new { id = "PaymentNewSum", @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="PaymentNewComment" class="col-sm-3 control-label">Комментарий</label>
                    <div class="col-sm-9">
                        <textarea id="PaymentNewComment" class="form-control" rows="3" placeholder="НЕ ОБЯЗАТЕЛЬНО"></textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button id="paymentNewSave" class="btn btn-success"><i class="fa fa-save"></i> Сохранить</button>
            <a class="btn btn-default" data-dismiss="modal"><i class="fa fa-remove"></i> Отмена</a>
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->

<script>
        $(function() {
            $('#PaymentNewDate').datepicker({
                format: 'dd.mm.yyyy',
                language: "ru",
                todayHighlight: true,
                autoclose: true
            });
            $('#PaymentNewSum').mask("### ### ### ##0", { reverse: true });
        })
</script>